	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"devDependencies": {
		"stylelint": "^9.10.1",
		"stylelint-config-recommended": "^2.1.0",
		"stylelint-config-styled-components": "^0.1.1",
